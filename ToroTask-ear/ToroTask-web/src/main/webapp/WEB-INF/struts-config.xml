<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.1//EN" "http://jakarta.apache.org/struts/dtds/struts-config_1_1.dtd">

<struts-config>
	<form-beans>
		<form-bean name="calendarioForm" type="com.gotoque.torotask.presentacion.struts.form.CalendarioForm" />
		<form-bean name="ganttForm" type="com.gotoque.torotask.presentacion.struts.form.GanttForm" />
		<form-bean name="recursosForm" type="com.gotoque.torotask.presentacion.struts.form.RecursosForm" />
		<form-bean name="reportesForm" type="com.gotoque.torotask.presentacion.struts.form.ReportesForm" />
		<form-bean name="accesoForm" type="com.gotoque.torotask.presentacion.struts.form.AccesoForm" />
		<form-bean name="mantencionForm" type="com.gotoque.torotask.presentacion.struts.form.MantenedorForm" />
                <form-bean name="loginForm" type="com.gotoque.torotask.presentacion.struts.form.LoginForm" />
	</form-beans>

	<global-forwards>
		<forward name="error" path="/jsp/error.jsp" />
	</global-forwards>

	<action-mappings>
		<action attribute="calendarioForm" name="calendarioForm"
			parameter="toMethod" path="/calendario" scope="request"
			type="com.gotoque.torotask.presentacion.struts.action.CalendarioAction"
			validate="false">
			<forward name="continuar" path="/calendario.jsp" />
		</action>
		<action attribute="ganttForm" name="ganttForm"
			parameter="toMethod" path="/gantt" scope="request"
			type="com.gotoque.torotask.presentacion.struts.action.GanttAction"
			validate="false">
			<forward name="continuar" path="/gantt.jsp" />
		</action>
		<action attribute="recursosForm" name="recursosForm"
			parameter="toMethod" path="/recursos" scope="request"
			type="com.gotoque.torotask.presentacion.struts.action.RecursosAction"
			validate="false">
			<forward name="continuar" path="/recurso.jsp" />
			<forward name="detalle" path="/jsp/recurso/recurso.jsp" />
		</action>
		<action attribute="reportesForm" name="reportesForm"
			parameter="toMethod" path="/reportes" scope="request"
			type="com.gotoque.torotask.presentacion.struts.action.ReportesAction"
			validate="false">
			<forward name="continuar" path="/reporte.jsp" />
		</action>				
		<action attribute="accesoForm" name="accesoForm"
			parameter="toMethod" path="/acceso" scope="request"
			type="com.gotoque.torotask.presentacion.struts.action.AccesoAction"
			validate="false">
			<forward name="continuar" path="/calendario.do" />
			<forward name="menu" path="/jsp/include/menu.jsp" />
		</action>
		<action attribute="mantencionForm" name="mantencionForm"
			parameter="toMethod" path="/mantenedor" scope="request"
			type="com.gotoque.torotask.presentacion.struts.action.MantenedorAction"
			validate="false">
			<forward name="continuar" path="/mantencion.jsp" />
		</action>
                <action attribute="loginForm" name="loginForm"
			parameter="toMethod" path="/login" scope="request"
			type="com.gotoque.torotask.presentacion.struts.action.LoginAction"
			validate="false">
			<forward name="continuar" path="/login.jsp" />
                        <forward name="send" path="/calendario.do" />
		</action>
	</action-mappings>

	<message-resources
		parameter="com.gotoque.torotask.struts.ApplicationResources" />
</struts-config>
